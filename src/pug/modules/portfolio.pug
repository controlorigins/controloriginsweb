      {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "name": "Control Origins Portfolio",
        "description": "Technology projects and applications developed by Control Origins",
        "itemListElement": [
          {
            "@type": "SoftwareApplication",
            "position": 1,
            "name": "MVC Sample CRUD Demo",
            "description": "A demonstration of MVC CRUD implementation in .NET 5x",
            "url": "https://markhazletonsamplecrud.controlorigins.com/",
            "applicationCategory": "WebApplication",
            "operatingSystem": "Any"
          },
          {
            "@type": "SoftwareApplication",
            "position": 2,
            "name": "Data Analysis Demo",
            "description": "CSV file data analysis application",
            "url": "https://app.controlorigins.com/dataanalysis/",
            "applicationCategory": "DataProcessing",
            "operatingSystem": "Web Browser"
          },
          {
            "@type": "WebSite",
            "position": 3,
            "name": "Project Mechanics",
            "description": "Project management methodology website",
            "url": "https://markhazleton.com/projectmechanics/index.html"
          },
          {
            "@type": "SoftwareApplication",
            "position": 4,
            "name": "Project Portal",
            "description": "Control Origins project management platform",
            "url": "https://app.controlorigins.com/",
            "applicationCategory": "ProjectManagement"
          },
          {
            "@type": "SoftwareApplication",
            "position": 5,
            "name": "Async Demo",
            "description": "Demonstration of asynchronous API calls using Polly for timeout handling",
            "url": "https://asyncwebsample.azurewebsites.net/",
            "applicationCategory": "WebApplication"
          },
